# ===========================================
# Monopoly Server Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Server binding
# Use 0.0.0.0 to accept connections from any interface
# Use 127.0.0.1 for local-only access
SERVER_HOST=0.0.0.0
SERVER_PORT=8765

# Database path
# For development: ./data/monopoly.db
# For production: /opt/monopoly/data/monopoly.db
DATABASE_PATH=./data/monopoly.db

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Security - CHANGE THIS IN PRODUCTION!
# Generate a random key: python -c "import secrets; print(secrets.token_hex(32))"
SERVER_SECRET_KEY=change-me-in-production

# ===========================================
# Client Configuration (if running client)
# ===========================================

# Server connection (for client)
# MONOPOLY_SERVER_HOST=localhost
# MONOPOLY_SERVER_PORT=8765

# UI settings
# MONOPOLY_WINDOW_WIDTH=1280
# MONOPOLY_WINDOW_HEIGHT=800

# Reconnection settings
# MONOPOLY_RECONNECT_ATTEMPTS=5
# MONOPOLY_RECONNECT_DELAY=2.0
